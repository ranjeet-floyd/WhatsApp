<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_100"
    tools:context="in.istore.bitblue.app.loginScreen.ChangePassword">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/signuptoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padd10dp"
        android:paddingRight="@dimen/padd10dp">

        <EditText
            android:id="@+id/et_changepass_oldpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padd20dp"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:textColor="@color/material_blue_A400"
            android:textColorHint="@color/material_teal_700" />

        <EditText
            android:id="@+id/et_changepass_newpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padd20dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColor="@color/material_blue_A400"
            android:textColorHint="@color/material_teal_300" />

        <EditText
            android:id="@+id/et_changepass_confirmnewpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padd20dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/material_blue_A400"
            android:textColorHint="@color/material_teal_300" />

        <Button
            android:id="@+id/b_changepass_submit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/button_shadow"
            android:text="Submit" />
    </LinearLayout>
</RelativeLayout>
