<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padd10dp"
        android:layout_marginRight="@dimen/padd10dp"
        android:layout_marginTop="@dimen/padd10dp"
        android:background="@drawable/list_item_shadow"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padd10dp">

            <ImageView
                android:id="@+id/iv_soldlistitem_img"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:src="@drawable/no_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padd5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padd5dp"
                android:paddingRight="@dimen/padd5dp"
                android:paddingTop="@dimen/padd5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_soldlistitem_name"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Name"
                        android:textAllCaps="true"
                        android:textColor="@color/myPrimaryColor"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />


                    <ToggleButton
                        android:id="@+id/ib_soldlistitem_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_weight="0"
                        android:background="@drawable/favorite"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="right"
                        android:textColor="@color/myPrimaryColor"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_listitem_id"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="@color/myPrimaryColor" />
                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd15dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Id: "
                        android:textColor="@color/myPrimaryColor" />

                    <TextView
                        android:id="@+id/tv_soldlistitem_category"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="book"
                        android:textColor="@color/myPrimaryColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sold on: "
                        android:textColor="@color/myPrimaryColor" />

                    <TextView
                        android:id="@+id/tv_soldlistitem_date"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="date"
                        android:textColor="@color/myPrimaryColor" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>