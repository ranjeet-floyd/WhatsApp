<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.istore.bitblue.app.loginScreen.LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_draw_icon_remback" />

            <Button
                android:id="@+id/bGmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signWithGmail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_draw_icon_remback" />

            <Button
                android:id="@+id/bFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signWithFacebook" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
