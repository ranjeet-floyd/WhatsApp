<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/padd5dp"
    android:orientation="horizontal"
    android:weightSum="4">

    <TextView
        android:id="@+id/tv_todaysalestaff_prodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/dark_grey" />

    <TextView
        android:id="@+id/tv_todaysalestaff_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/dark_grey" />

    <TextView
        android:id="@+id/tv_todaysalestaff_purchaseamnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/dark_grey" />

    <TextView
        android:id="@+id/tv_todaysalestaff_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/dark_grey" />
</LinearLayout>