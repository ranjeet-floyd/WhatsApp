<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_homepage_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padd5dp"
    android:layout_marginLeft="@dimen/padd5dp"
    android:layout_marginRight="@dimen/padd5dp"
    android:layout_marginTop="@dimen/padd5dp"
    android:gravity="center"
    android:minHeight="250dp"
    android:orientation="vertical"
    android:alpha="0.5">

    <ImageView
        android:id="@+id/iv_homepage_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tran" />

    <TextView
        android:id="@+id/b_homepage_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="1dp"
        android:singleLine="true"
        android:text="Transaction"
        android:textColor="@color/black" />

</LinearLayout>