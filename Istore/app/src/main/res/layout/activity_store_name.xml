<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_100"
    tools:context="in.istore.bitblue.app.loginScreen.StoreName">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/signuptoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padd30dp"
            android:paddingRight="@dimen/padd30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store Name:"
                android:textColor="@color/myPrimaryColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_storename_storename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Your Store"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/material_blue_grey_500"
                android:textColorHint="@color/grey" />

            <Button
                android:id="@+id/b_storename_done"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/padd30dp"
                android:background="@drawable/button_shadow"
                android:text="Done" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
